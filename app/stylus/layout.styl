.navbar
  border-radius: 0
  background-color: #f8f8f8
  border-bottom 1px solid #eee
  padding: 0 30px
  height: 50px
  margin-bottom: 0
  min-height: auto

.navbar.primary
  position: fixed
  top: 0
  right: 0
  left: 16.66666667%;

  h1
    margin: 0
    line-height: 50px
    font-size: 24px
    display: inline-block

  div
    line-height: 50px

.navbar.secondary
  margin-top: 50px

  ul
    padding: 0
    margin: 0
    list-style: none

    li
      line-height: 49px
      display: inline-block

      a
        display: inline-block
        padding: 0 10px

      a:hover
        background-color: #eee

      a.active
        background-color: #eee
        border-bottom-color: #333

.sidebar
  display: none

  .logo img
    height: 44px

@media(min-width:768px)
  .sidebar
    position fixed
    top 0
    bottom 0
    left 0
    z-index 1000
    display block
    padding 20px
    overflow-x hidden
    overflow-y auto
    background-color #f5f5f5
    border-right 1px solid #eee

  .main
    padding: 0


.nav-sidebar
  margin-right: -21px // 20px padding + 1px border
  margin-bottom: 20px
  margin-left: -20px

.nav-sidebar > li > a
  padding-right: 20px
  padding-left: 20px

.nav-sidebar > .active > a,
.nav-sidebar > .active > a:hover,
.nav-sidebar > .active > a:focus
  color: #f5f5f5
  background-color: #428bca

.main
  padding: 0
  .page-header
      margin-top 0

.placeholders
  margin-bottom 30px
  text-align center
  h4
    margin-bottom 0

.placeholder
  margin-bottom 20px
  img
    display inline-block
    border-radius 50%

section.main-content {
  padding: 30px
  padding-bottom: 60px
}

section.login
  padding-top: 40px;
  width: 300px;
  margin: 0 auto;

  .logo
    text-align: center;
    margin-bottom: 20px;

    img
      height: 50px
